{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": false,
      "target": "es2017",
      "moduleResolution": "node",
      "module": "commonjs",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "noImplicitAny": false,
      "noImplicitThis": true,
      "resolveJsonModule": true,
      "sourceMap": false,
      "declaration": false,
      "declarationMap": false,
      "newLine": "LF",
      "lib": [
        "esnext",
        "dom",
        "es6"
      ]
    }
  }